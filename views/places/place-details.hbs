<div>
   <h2>Aqui los detalles de {{placeDetails.name}}</h2>
   {{#each placeDetails}}
   <p>{{this.location}}</p>
   <p>{{this.description}}</p>
   <img src="{{this.placeImg}}" alt="" width="200px">
   {{/each}}

   <form action="/user/{{placeDetails._id}}/fav" method="post"><button>Favorito</button></form>

   {{#if isAdminActive}}
   <a href="/places/{{placeDetails._id}}/update"><button>Editar</button></a>
   <form action="/places/{{placeDetails._id}}/delete" method="post"><button type="submit">Eliminar</button></form>
    {{/if}}

    <div>
        <form action="/comment/create/{{placeDetails._id}}" method="post">
            <textarea name="description" id="" cols="30" rows="10" placeholder="Deja aqui tu reseÃ±a!"></textarea>
            <button>Publicar</button>
        </form>
    </div>
    <div>
        {{#each allComments}}
            <h4>{{this.owner.username}}</h4>
            <p>{{this.description}}</p>     
        {{#if ../isAdminActive}} 
                <form action="/comment/delete/{{this.place._id}}/{{this._id}}" method="post"><button type="submit">Eliminar Comentario</button></form>
        {{/if}} 
        {{/each}}
    </div>
</div>