<div id="myprofile" style="margin-top: 80px;">

  <div class="profile-section">
    <h2>Mi Perfil</h2>
    <h2>{{oneUser.username}}</h2>
    <img src="{{oneUser.profileImg}}" alt="imagen-perfil" width="100px" />
    <p>{{oneUser.email}}</p>
    <p>{{this.dateborn}}</p>
    <div>
      <a href="/user/update"><button
          class="form-miperfil-button btn btn-primary"
        >Editar Perfil</button></a>
    </div>
  </div>

  <div class="fav-container borderPlaces">
    <h2 style="margin-bottom:30px; margin-top:30px">Lugares Favoritos</h2>
    <div class="fav-row" style="margin-bottom:50px;">
      {{#each oneUser.placeFav}}
        <div class="favs" style="margin:0 auto">

          <img src="{{this.placeImg}}" width="100px" />
          <h4 style="margin-top:18px">{{this.name}}</h4>

          <div class="button-container-fav">
            <form action="/user/{{this._id}}/delete" method="post"><button
                class="btn btn-primary"
              >Eliminar Fav</button></form>
            <a href="/places/{{this._id}}/details"><button
                class="btn btn-primary"
              >Detalles</button></a>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

</div>